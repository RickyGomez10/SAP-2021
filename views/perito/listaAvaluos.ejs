<h1>Historial de Avalúos</h1>
<table class="table table-hover mt-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Dirección</th>
        <th scope="col">Estado</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < lista.length ; i++) { %>
        <tr>
          <th><%= i+1 %></th>
          <td> <%= lista[i].nombres + " " + lista[i].apellidos %> </td>
          <td> <%= lista[i].direccion1 + " " + lista[i].direccion2 + ", "+lista[i].ciudad + ", "+lista[i].pais %> </td>
          <td> <%= lista[i].avaluoCompletado?"Completado":"Por completar" %> </td>
          <td> <a href=<%= "/perito/avaluo/"+lista[i]._id %>>Ver</a> </td>
        </tr>
      <% } %>
    </tbody>
  </table>